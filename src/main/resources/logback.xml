<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Drive level from system property 'logging.level' with WARN default -->
    <root level="${logging.level:-WARN}">
        <appender-ref ref="STDOUT" />
    </root>
    
    <!-- Set specific loggers if needed -->
    <logger name="control.Start" level="${logging.level:-WARN}" />
    <logger name="audio" level="${logging.level:-WARN}" />
    <logger name="components" level="${logging.level:-WARN}" />
</configuration>
